<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="ShareClipbrdApp.App"
             RequestedThemeVariant="Default">
  <Application.Styles>
    <FluentTheme />
  </Application.Styles>

  <TrayIcon.Icons>
    <TrayIcons>
      <TrayIcon Icon="/Assets/app.ico" ToolTipText="Sharing the clipboard between two computers">
        <TrayIcon.Menu>
          <NativeMenu>
            <NativeMenuItem Header="Paste" Click="MenuItemPaste_Click"/>
            <NativeMenuItemSeparator/>
            <NativeMenuItem Header="Exit" Click="MenuItemExit_Click"></NativeMenuItem>
          </NativeMenu>
        </TrayIcon.Menu>
      </TrayIcon>
    </TrayIcons>
  </TrayIcon.Icons>
</Application>

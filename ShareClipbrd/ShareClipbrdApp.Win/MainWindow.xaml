<Window x:Class="ShareClipbrdApp.Win.MainWindow"
       xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Height="64" Width="64"
        MinHeight="30" MinWidth="30"
        AllowsTransparency="True" 
        WindowStyle="None"
        ResizeMode="NoResize"
        Background="LightSteelBlue"        
        Topmost="True"
        Title="UsAcRe.Recorder.UI"
        MouseLeftButtonDown="Window_MouseLeftButtonDown" 
        Initialized="Window_Initialized"
        Closed="Window_Closed">

    <Border BorderThickness="1" BorderBrush="DarkGoldenrod">
        
        <Grid >
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Button Content="X" Grid.Column="2" HorizontalAlignment="Right" Height="20" Margin="0,0,0,0" Grid.Row="0" VerticalAlignment="Top" Width="20
                    " Click="Button_Click"/>

        </Grid>
    </Border>
</Window>
